version: "3.9"

services:
  api:
    build: ./api
    ports:
      - "8000:8000"
    volumes:
      - ./api:/app
    env_file:
      - .env

  hud:
    build: ./hud
    ports:
      - "3000:3000"
    volumes:
      - ./hud:/app
    env_file:
      - .env

  db:
    image: postgres:14
    restart: always
    environment:
      POSTGRES_USER: empire
      POSTGRES_PASSWORD: empire
      POSTGRES_DB: empire
    ports:
      - "5432:5432"
    volumes:
      - db_data:/var/lib/postgresql/data

  redis:
    image: redis:6
    ports:
      - "6379:6379"

volumes:
  db_data:
